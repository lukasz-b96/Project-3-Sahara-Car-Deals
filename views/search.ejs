<h1 class="pb-4">Search Results</h1>

<div class="row row-cols-2 row-cols-lg-4 g-2 g-lg-3">
    <% if(cars != "") { %> <% cars.forEach(function(deal,index){ %>
    <a href="/car/<%- deal.id -%> " class="col text-center scale-hover-big">
      <div class="shadow">
        <img
          src="/uploads/<%- deal.image -%>"
          alt="view-all"
          Loading="lazy"
        />
      </div>
      <div class="pt-1"><%- deal.brand -%> <%- deal.model -%> - <%- deal.fixedPrice -%>%></div>
    </a>
    <%}) %> <% } %>
  </div>