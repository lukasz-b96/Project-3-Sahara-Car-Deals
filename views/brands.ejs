<h1 class="mt-2 mb-2">Brands You Might Like</h1>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
  </ol>
</nav>

<div class="row row-cols-1  row-cols-lg-5 g-2 g-lg-3 mb-4 ">
  <% if(brands != "") { %> <% brands.forEach(function(brand,index){ %>

  <a href="/brands/<%- brand.name.replace(/ /g, '') -%>" class="col text-center scale-hover mx-auto max-width">
    <div class="shadow">
      <img
        src="/img/<%- brand.image -%>"
        alt="<%- brand.name -%>"
        Loading="lazy"
      />
    </div>
    <div class="pt-3"></div>
    <!-- <div class="pt-1"><%- brand.name -%></div> -->
  </a>
  <%}) %> <% } %>
</div>
